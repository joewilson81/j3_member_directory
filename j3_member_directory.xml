<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
 
    <name>J3 Member Directory</name>
    <creationDate>December 2014</creationDate>
    <author>Joe Wilson</author>
    <authorEmail>joe@augustknight.com</authorEmail>
    <authorUrl>http://www.augustknight.com</authorUrl>
    <license>The MIT License (MIT)</license>
    <version>0.0.1</version>
    <description>A Joomla3 member directory.</description>
 
    <update> <!-- Runs on update; New since J2.5 -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql/</schemapath>
        </schemas>
    </update>
 
    <!-- Site Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
        to copy FROM in the package to install therefore files copied
        in this section are copied from /site/ in the package -->
    <files folder="site">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>j3_member_directory.php</filename>
        <folder>models</folder>
        <folder>views</folder>
    </files>
 
    <administration>
        <!-- Administration Menu Section -->
        <menu>Member Directory</menu>
        <!-- Administration Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
            to copy FROM in the package to install therefore files copied
            in this section are copied from /admin/ in the package -->
        <files folder="admin">
            <!-- Admin Main File Copy Section -->
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>j3_member_directory.php</filename>
            <!-- SQL files section -->
            <folder>sql</folder>
        </files>
    </administration>
 
</extension>